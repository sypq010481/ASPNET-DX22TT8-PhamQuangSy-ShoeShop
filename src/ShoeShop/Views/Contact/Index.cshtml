		<div class="row">
			<div class="col-md-12">
				<div class="contact-wrap">
					<h3>Liên hệ với chúng tớ</h3>
					<form action="#" class="contact-form">
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label for="fname">Họ </label>
									<input type="text" id="fname" class="form-control" placeholder="Bạn họ gì nhỉ (Không bắt buộc phải điền đâu nè)">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="lname">Tên</label>
									<input type="text" id="lname" class="form-control" placeholder="Cho mình biết tên của bạn nhé">
								</div>
							</div>
							<div class="w-100"></div>
							<div class="col-sm-12">
								<div class="form-group">
									<label for="email">Email</label>
									<input type="text" id="email" class="form-control" placeholder="Email của bạn để chúng tớ liên hệ với bạn nè">
								</div>
							</div>
							<div class="w-100"></div>
							<div class="col-sm-12">
								<div class="form-group">
									<label for="message">Nội dung</label>
									<textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Chúng tớ rất mong nhận được ý kiến hoặc phản hồi từ bạn!"></textarea>
								</div>
							</div>
							<div class="w-100"></div>
							<div class="col-sm-12">
								<div class="form-group text-center">
									<input type="submit" value="Gửi cho chúng tớ ngay" class="btn btn-primary">
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
