@model IEnumerable<ShoeShop.Models.ProductModel>
@{
    ViewData["Title"] = "Product Admin";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span>SẢN PHẨM</h4>
    <div class="card">
        <div class="card-body">
            <div class="demo-inline-spacing">
                <a href="@Url.Action("Create", "Product")" class="btn btn-dark"><i class="bx bx-plus me-1"></i>Thêm mới</a>
            </div>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Thương hiệu</th>
                        <th>Tồn kho</th>
                        <th>Hỉnh ảnh</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i><a href="@Url.Action("Edit", "Product", new { id = product.Id })"><strong>@product.Name</strong></a></td>
                            <td>@product.Category.Name</td>
                            <td>@product.Quantity</td>
                            <td>
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@Url.Content("~/upload/product/" + @product.ImageUrl)" alt="user-avatar"
                                            class="d-block rounded"
                                            height="70"
                                            width="70"
                                         style="border: solid 2px #5f61e6; border-radius: 15px" />
                                }                                
                            </td>
                            <td><span class="badge bg-label-@(product.Status == 1 ? "success" : "danger") me-1">@(product.Status == 1 ? "Bật" : "Tắt")</span></td>
                            <td>
                                <a class="btn btn-dark" href="@Url.Action("Edit", "Product", new { id = product.Id })"><i class="bx bx-pencil me-1"></i>Chi tiết</a>
                                <a class="btn btn-danger" href="@Url.Action("Delete", "Product", new { id = product.Id })"><i class="bx bx-trash me-1"></i>Xóa </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>