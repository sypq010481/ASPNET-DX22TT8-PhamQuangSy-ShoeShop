@{
    ViewData["Title"] = "Edit Product";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span> SỬA SẢN PHẨM</h4>
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Tên Sản phẩm</label>
                            <input type="text" class="form-control" id="basic-default-fullname" placeholder="Nhập tên danh mục" />
                        </div>
                        <div>
                            <label for="exampleFormControlTextarea1" class="form-label">Mô tả</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="exampleFormControlSelect1" class="form-label">Thương hiệu</label>
                            <select class="form-select" id="exampleFormControlSelect1" aria-label="Default select example">
                                <option selected>Open this select menu</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                        <div>
                            <label for="exampleFormControlTextarea1" class="form-label">Nội dung</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="10"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="formFile" class="form-label">Hình ảnh</label>
                            <input class="form-control" type="file" id="formFile" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Trạng thái</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input float-start" type="checkbox" role="switch" checked />
                            </div>
                        </div>
                        
                        <div class="card mb-5">
                            <div class="card-body">
                                <div class="demo-inline-spacing">
                                    <button type="button"
                                            class="btn btn-primary"
                                            data-bs-toggle="modal"
                                            data-bs-target="#createSize">
                                        THÊM CỠ GIÀY
                                    </button>                                    
                                </div>
                            </div>
                            <div class="table-responsive text-nowrap">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Kích thước</th>
                                            <th>Số lượng</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-border-bottom-0">
                                        <tr>
                                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>32</strong></td>                                            
                                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>100</strong></td>
                                            <td>
                                                <button type="button" class="btn btn-dark" href="javascript:void(0);" 
                                                    data-id="" 
                                                    data-bs-toggle="modal"
                                                        data-bs-target="#updateSize"
                                                    onclick="">
                                                    <i class="bx bx-pencil me-1"></i> Edit
                                                </button>
                                                <button type="button" class="btn btn-danger" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Xóa</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Lưu</button>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-outline-secondary">Trở về</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@await Html.PartialAsync("CreateModal")
@await Html.PartialAsync("EditModal")