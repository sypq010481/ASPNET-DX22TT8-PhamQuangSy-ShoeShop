@model IEnumerable<ShoeShop.Models.CategoryModel>
@{
    ViewData["Title"] = "Category Admin";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span> DANH MỤC SẢN PHẨM</h4>
    <div class="card">        
        <div class="card-body">            
            <div class="demo-inline-spacing">
                <a href="@Url.Action("Create", "Category")" class="btn btn-dark"><i class="bx bx-plus me-1"></i>Thêm mới</a>
            </div>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tên danh mục</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i><a href="@Url.Action("Edit", "Category", new { id = category.Id })"><strong>@category.Name</strong></a></td>
                            <td><span class="badge bg-label-@(category.Status == 1 ? "success" : "danger") me-1">@(category.Status == 1 ? "Bật" : "Tắt")</span></td>
                            <td>
                                <a class="btn btn-dark" href="@Url.Action("Edit", "Category", new { id = category.Id })"><i class="bx bx-pencil me-1"></i>Chi tiết</a>
                                <a class="btn btn-danger" href="@Url.Action("Delete", "Category", new { id = category.Id })"><i class="bx bx-trash me-1"></i> Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>