@{
    ViewData["Title"] = "Create Category";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span> THÊM DANH MỤC</h4>    
    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">                
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Tên danh mục</label>
                            <input type="text" class="form-control" id="basic-default-fullname" placeholder="Nhập tên danh mục" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="basic-default-fullname">Trạng thái</label>
                            <div class="form-check form-switch">
                                <input class="form-check-input float-start" type="checkbox" role="switch" checked />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Tạo mới</button>
                        <a href="@Url.Action("Index", "Category")" class="btn btn-outline-secondary">Trở về</a>
                    </form>
                </div>
            </div>
        </div>        
    </div>
</div>