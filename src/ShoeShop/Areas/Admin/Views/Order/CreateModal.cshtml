@model ShoeShop.Models.OrderDetailModel

<div class="modal fade" id="createOrder" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog">
        <form class="modal-content" method="post" asp-controller="Order" asp-action="CreateModal" enctype="multipart/form-data">
            <div class="modal-header">
                <h5 class="modal-title">Thêm thông tin đơn hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" asp-for="OrderId" id="orderIdDetail" />
                <div class="mb-3">
                    <label class="form-label">Sản phẩm</label>
                    <select class="form-select" asp-for="ProductId" asp-items="ViewBag.products">
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Số lượng</label>
                    <input type="number" asp-for="Quantity" class="form-control" />
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Đóng
                </button>
                <button type="submit" class="btn btn-primary">Lưu</button>
            </div>
        </form>
    </div>
</div>
