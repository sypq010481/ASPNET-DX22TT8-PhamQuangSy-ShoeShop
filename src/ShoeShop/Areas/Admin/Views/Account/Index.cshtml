@model IEnumerable<ShoeShop.Models.UserModel>
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span> TÀI KHOẢN NGƯỜI DÙNG</h4>
    <div class="card">
        <div class="card-body">
            <div class="demo-inline-spacing">
                <a href="@Url.Action("Create", "Account")" class="btn btn-dark"><i class="bx bx-plus me-1"></i>Thêm mới</a>
            </div>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>Họ và tên</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>                        
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                     @foreach (var user in Model)
                    {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <a href="@Url.Action("Edit", "Account", new { id = user.Id })"><strong>@user.Name</strong></a></td>
                        <td>@user.Phone</td>
                        <td>@user.Email</td>                        
                        <td><span class="badge bg-label-@(user.Actived == 1 ? "success" : "danger") me-1">@(user.Actived == 1 ? "Hoạt động" : "Không hoạt động")</span></td>
                        <td>
                                <a class="btn btn-dark" href="@Url.Action("Edit", "Account", new { id = user.Id })"><i class="bx bx-pencil me-1"></i>Chi tiết</a>
                                <a class="btn btn-danger" href="@Url.Action("Delete", "Account", new { id = user.Id })"><i class="bx bx-trash me-1"></i> Xóa</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>